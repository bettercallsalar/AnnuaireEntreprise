<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AnnuaireEntreprise.Maui.Views.ModifyEmployeePopup"
               Size="400,500">
       <ScrollView>
              <VerticalStackLayout Padding="20"
                                   Spacing="20"
                                   BackgroundColor="#1E1E1E">
                     <!-- Title -->
                     <Label Text="Modify Employee"
                            FontSize="26"
                            FontAttributes="Bold"
                            TextColor="#E0E0E0"
                            HorizontalOptions="Center"
                            Margin="0,10,0,20"/>

                     <!-- Input Fields -->
                     <VerticalStackLayout Spacing="15">
                            <Entry Placeholder="First Name"
                                   Text="{Binding SelectedEmployeeForModification.Nom}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#2A2A2A"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Last Name"
                                   Text="{Binding SelectedEmployeeForModification.Prenom}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#2A2A2A"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Email"
                                   Text="{Binding SelectedEmployeeForModification.Email}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#2A2A2A"
                                   Keyboard="Email"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Phone Number"
                                   Text="{Binding SelectedEmployeeForModification.TelephonePortable}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#2A2A2A"
                                   Keyboard="Telephone"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Picker Title="Site"
                                    ItemsSource="{Binding Sites}"
                                    SelectedItem="{Binding SelectedSite}"
                                    ItemDisplayBinding="{Binding Ville}"
                                    TextColor="#E0E0E0"
                                    BackgroundColor="#2A2A2A"
                                    FontSize="16"
                                    Margin="0,5"
                                    HeightRequest="50"/>
                            <Picker Title="Service"
                                    ItemsSource="{Binding Services}"
                                    SelectedItem="{Binding SelectedService}"
                                    ItemDisplayBinding="{Binding Nom}"
                                    TextColor="#E0E0E0"
                                    BackgroundColor="#2A2A2A"
                                    FontSize="16"
                                    Margin="0,5"
                                    HeightRequest="50"/>
                     </VerticalStackLayout>

                     <!-- Separator -->
                     <BoxView HeightRequest="1"
                              BackgroundColor="#424242"
                              Margin="0,20"/>

                     <!-- Action Buttons -->
                     <HorizontalStackLayout Spacing="15"
                                            HorizontalOptions="Center">
                            <Button Text="Save"
                                    Command="{Binding SaveEmployeeChangesCommand}"
                                    BackgroundColor="#4CAF50"
                                    TextColor="#FFFFFF"
                                    WidthRequest="120"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    FontSize="16"/>
                            <Button Text="Cancel"
                                    Command="{Binding ClosePopupCommand}"
                                    BackgroundColor="#F44336"
                                    TextColor="#FFFFFF"
                                    WidthRequest="120"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    FontSize="16"/>
                            <Button Text="Delete"
                                    Command="{Binding DeleteEmployeeCommand}"
                                    BackgroundColor="#FF5722"
                                    TextColor="#FFFFFF"
                                    WidthRequest="120"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    FontSize="16"/>
                     </HorizontalStackLayout>
              </VerticalStackLayout>
       </ScrollView>
</toolkit:Popup>

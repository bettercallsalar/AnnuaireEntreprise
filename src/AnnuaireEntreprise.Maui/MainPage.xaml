<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:AnnuaireEntreprise.Maui.ViewModels"
             x:Class="AnnuaireEntreprise.Maui.MainPage"
             Title="Annuaire Entreprise"
             BackgroundColor="#121212">

       <ContentPage.BindingContext>
              <viewmodels:MainPageViewModel/>
       </ContentPage.BindingContext>

       <Grid>
              <!-- Main Content -->
              <ScrollView>
                     <VerticalStackLayout Padding="25"
                                          Spacing="25">
                            <!-- Header -->
                            <HorizontalStackLayout Spacing="15">
                                   <Label Text="Liste des Employés"
                                          FontSize="32"
                                          FontAttributes="Bold"
                                          TextColor="#FFFFFF"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center">
                                          <Label.GestureRecognizers>
                                                 <TapGestureRecognizer Command="{Binding TitleClickedCommand}"/>
                                          </Label.GestureRecognizers>
                                   </Label>

                                   <Button Text="Search"
                                           Command="{Binding ShowSearchPopupCommand}"
                                           BackgroundColor="#1E88E5"
                                           TextColor="#FFFFFF"
                                           CornerRadius="20"
                                           Padding="15,10"
                                           FontSize="14"/>

                                   <Button Text="Clear Search"
                                           Command="{Binding ClearSearchCommand}"
                                           IsVisible="{Binding IsSearchActive}"
                                           BackgroundColor="#F4511E"
                                           TextColor="#FFFFFF"
                                           CornerRadius="20"
                                           Padding="15,10"
                                           FontSize="14"/>

                                   <Button Text="Sites"
                                           Command="{Binding ShowSitePopupCommand}"
                                           IsVisible="{Binding IsAdmin}"
                                           BackgroundColor="#00ACC1"
                                           TextColor="#FFFFFF"
                                           CornerRadius="20"
                                           Padding="15,10"
                                           FontSize="14"/>

                                   <Button Text="Services"
                                           Command="{Binding ShowServicePopupCommand}"
                                           IsVisible="{Binding IsAdmin}"
                                           BackgroundColor="#00ACC1"
                                           TextColor="#FFFFFF"
                                           CornerRadius="20"
                                           Padding="15,10"
                                           FontSize="14"/>

                                   <Button Text="Add Employee"
                                           Command="{Binding ShowAddEmployeePopupCommand}"
                                           IsVisible="{Binding IsAdmin}"
                                           BackgroundColor="#00ACC1"
                                           TextColor="#FFFFFF"
                                           CornerRadius="20"
                                           Padding="15,10"
                                           FontSize="14"/>
                            </HorizontalStackLayout>

                            <!-- Pagination -->
                            <HorizontalStackLayout HorizontalOptions="Center"
                                                   Spacing="15">
                                   <Button Text="Précédent"
                                           Command="{Binding PreviousPageCommand}"
                                           BackgroundColor="#1E88E5"
                                           TextColor="#FFFFFF"
                                           CornerRadius="15"
                                           Padding="15,10"
                                           FontSize="14"/>

                                   <Label Text="{Binding CurrentPage}"
                                          FontSize="16"
                                          TextColor="#FFFFFF"
                                          VerticalTextAlignment="Center"
                                          Padding="10"/>

                                   <Label Text="/"
                                          FontSize="16"
                                          TextColor="#FFFFFF"
                                          VerticalTextAlignment="Center"/>

                                   <Label Text="{Binding TotalPages}"
                                          FontSize="16"
                                          TextColor="#FFFFFF"
                                          VerticalTextAlignment="Center"
                                          Padding="10"/>

                                   <Button Text="Suivant"
                                           Command="{Binding NextPageCommand}"
                                           BackgroundColor="#1E88E5"
                                           TextColor="#FFFFFF"
                                           CornerRadius="15"
                                           Padding="15,10"
                                           FontSize="14"/>
                            </HorizontalStackLayout>

                            <!-- Employee List -->
                            <CollectionView ItemsSource="{Binding PagedFilteredEmployees}"
                                            SelectionMode="None"
                                            Margin="0,10,0,20">
                                   <!-- Header -->
                                   <CollectionView.Header>
                                          <Grid BackgroundColor="#FF363636"
                                                Padding="10"
                                                ColumnDefinitions="2*,3*,2*,3*"
                                                RowDefinitions="Auto">
                                                 <Label Text="Name"
                                                        FontAttributes="Bold"
                                                        TextColor="#FFFFFF"
                                                        FontSize="14"
                                                        HorizontalTextAlignment="Center"
                                                        VerticalTextAlignment="Center"/>
                                                 <Label Text="Email"
                                                        FontAttributes="Bold"
                                                        TextColor="#FFFFFF"
                                                        FontSize="14"
                                                        HorizontalTextAlignment="Center"
                                                        VerticalTextAlignment="Center"
                                                        Grid.Column="1"/>
                                                 <Label Text="Phone"
                                                        FontAttributes="Bold"
                                                        TextColor="#FFFFFF"
                                                        FontSize="14"
                                                        HorizontalTextAlignment="Center"
                                                        VerticalTextAlignment="Center"
                                                        Grid.Column="2"/>
                                                 <Label Text="Site / Service"
                                                        FontAttributes="Bold"
                                                        TextColor="#FFFFFF"
                                                        FontSize="14"
                                                        HorizontalTextAlignment="Center"
                                                        VerticalTextAlignment="Center"
                                                        Grid.Column="3"/>
                                          </Grid>
                                   </CollectionView.Header>

                                   <!-- Rows -->
                                   <CollectionView.ItemTemplate>
                                          <DataTemplate>
                                                 <Frame Padding="10"
                                                        CornerRadius="0"
                                                        BorderColor="#424242"
                                                        BackgroundColor="#FF363636"
                                                        Margin="0,1">
                                                        <Grid ColumnDefinitions="2*,3*,2*,3*"
                                                              RowDefinitions="Auto"
                                                              >

                                                               <!-- Name -->
                                                               <Label FontSize="14"
                                                                      TextColor="#FFFFFF"
                                                                      HorizontalTextAlignment="Center"
                                                                      VerticalTextAlignment="Center">
                                                                      <Label.Text>
                                                                             <MultiBinding StringFormat="{}{0} {1}">
                                                                                    <Binding Path="Prenom"/>
                                                                                    <Binding Path="Nom"/>
                                                                             </MultiBinding>
                                                                      </Label.Text>
                                                               </Label>

                                                               <!-- Email -->
                                                               <Label Text="{Binding Email}"
                                                                      FontSize="14"
                                                                      TextColor="#FFFFFF"
                                                                      HorizontalTextAlignment="Center"
                                                                      VerticalTextAlignment="Center"
                                                                      Grid.Column="1"/>

                                                               <!-- Phone -->
                                                               <Label Text="{Binding TelephonePortable}"
                                                                      FontSize="14"
                                                                      TextColor="#FFFFFF"
                                                                      HorizontalTextAlignment="Center"
                                                                      VerticalTextAlignment="Center"
                                                                      Grid.Column="2"/>
                                                               <HorizontalStackLayout Grid.ColumnSpan="4"
                                                                                      Spacing="10"
                                                                                      HorizontalOptions="End"
                                                                                      Margin="0,5,0,0">
                                                                      <!-- Site / Service -->
                                                                      <Label FontSize="14"
                                                                             TextColor="#FFFFFF"
                                                                             HorizontalTextAlignment="Center"
                                                                             VerticalTextAlignment="Center"
                                                                             Grid.Column="3">
                                                                             <Label.Text>
                                                                                    <MultiBinding StringFormat="{}{0} / {1}">
                                                                                           <Binding Path="Site.Ville"/>
                                                                                           <Binding Path="Service.Nom"/>
                                                                                    </MultiBinding>
                                                                             </Label.Text>
                                                                      </Label>
                                                                      <!-- Action Buttons -->

                                                                      <Button Text="Details"
                                                                              Command="{Binding BindingContext.ShowEmployeeDetailsPopupCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                                              CommandParameter="{Binding Id}"
                                                                              BackgroundColor="#1E88E5"
                                                                              TextColor="#FFFFFF"
                                                                              WidthRequest="90"
                                                                              HeightRequest="30"
                                                                              CornerRadius="15"
                                                                              FontSize="12"/>
                                                                      <Button Text="Modify"
                                                                              Command="{Binding BindingContext.ShowModifyEmployeePopupCommand, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                                              CommandParameter="{Binding Id}"
                                                                              IsVisible="{Binding BindingContext.IsAdmin, Source={RelativeSource AncestorType={x:Type ContentPage}}}"
                                                                              BackgroundColor="#FFC107"
                                                                              TextColor="#000000"
                                                                              WidthRequest="90"
                                                                              HeightRequest="30"
                                                                              CornerRadius="15"
                                                                              FontSize="12"/>
                                                               </HorizontalStackLayout>
                                                        </Grid>
                                                 </Frame>
                                          </DataTemplate>
                                   </CollectionView.ItemTemplate>
                            </CollectionView>
                     </VerticalStackLayout>
              </ScrollView>
       </Grid>
</ContentPage>

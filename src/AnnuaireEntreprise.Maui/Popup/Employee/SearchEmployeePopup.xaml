<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AnnuaireEntreprise.Maui.Views.SearchEmployeePopup"
               Size="400,600">
       <ScrollView>
              <VerticalStackLayout Padding="20"
                                   Spacing="20"
                                   BackgroundColor="#121212">
                     <!-- Title -->
                     <Label Text="Search Employees"
                            FontSize="26"
                            FontAttributes="Bold"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Center"
                            Margin="0,10,0,20"/>
                     <!-- Action Buttons -->
                     <HorizontalStackLayout Spacing="15"
                                            HorizontalOptions="Center">
                            <Button Text="Search"
                                    Command="{Binding PerformSearchCommand}"
                                    BackgroundColor="#007AFF"
                                    TextColor="#FFFFFF"
                                    WidthRequest="140"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    FontSize="16"/>
                            <Button Text="Close"
                                    Command="{Binding ClosePopupCommand}"
                                    BackgroundColor="#F44336"
                                    TextColor="#FFFFFF"
                                    WidthRequest="140"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    FontSize="16"/>
                     </HorizontalStackLayout>
                     <!-- Separator -->
                     <BoxView HeightRequest="1"
                              BackgroundColor="#424242"
                              Margin="0,20"/>

                     <!-- Input Fields -->
                     <VerticalStackLayout Spacing="15">
                            <Entry Placeholder="Nom"
                                   Text="{Binding SearchNom}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#1D1D1D"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Prenom"
                                   Text="{Binding SearchPrenom}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#1D1D1D"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Email"
                                   Text="{Binding SearchEmail}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#1D1D1D"
                                   Keyboard="Email"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Téléphone Portable"
                                   Text="{Binding SearchTelephonePortable}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#1D1D1D"
                                   Keyboard="Telephone"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Entry Placeholder="Téléphone Fixe"
                                   Text="{Binding SearchTelephoneFixe}"
                                   FontSize="16"
                                   TextColor="#E0E0E0"
                                   PlaceholderColor="#757575"
                                   BackgroundColor="#1D1D1D"
                                   Keyboard="Telephone"
                                   Margin="0,5"
                                   HeightRequest="50"/>
                            <Picker Title="Site"
                                    ItemsSource="{Binding Sites}"
                                    SelectedItem="{Binding SelectedSite}"
                                    ItemDisplayBinding="{Binding Ville}"
                                    TextColor="#FFFFFF"
                                    BackgroundColor="#1D1D1D"
                                    FontSize="16"
                                    Margin="0,5"
                                    HeightRequest="50"/>
                            <Picker Title="Service"
                                    ItemsSource="{Binding Services}"
                                    SelectedItem="{Binding SelectedService}"
                                    ItemDisplayBinding="{Binding Nom}"
                                    TextColor="#FFFFFF"
                                    BackgroundColor="#1D1D1D"
                                    FontSize="16"
                                    Margin="0,5"
                                    HeightRequest="50"/>
                     </VerticalStackLayout>



              </VerticalStackLayout>
       </ScrollView>
</toolkit:Popup>

<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="AnnuaireEntreprise.Maui.Views.ShowEmployeePopup"
               Size="600,500">
       <ScrollView>
              <VerticalStackLayout Padding="20"
                                   Spacing="20"
                                   BackgroundColor="#121212">
                     <!-- Title -->
                     <Label Text="Employee Details"
                            FontSize="26"
                            FontAttributes="Bold"
                            TextColor="#FFFFFF"
                            HorizontalOptions="Center"
                            Margin="0,10,0,20"/>

                     <!-- Employee Details -->
                     <VerticalStackLayout Spacing="20">
                            <!-- First Name -->
                            <HorizontalStackLayout Spacing="10">
                                   <Label Text="First Name:"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#9E9E9E"
                                          WidthRequest="130"/>
                                   <Label Text="{Binding SelectedInfoEmployee.Prenom}"
                                          FontSize="16"
                                          TextColor="#FFFFFF"
                                          VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <!-- Last Name -->
                            <HorizontalStackLayout Spacing="10">
                                   <Label Text="Last Name:"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#9E9E9E"
                                          WidthRequest="130"/>
                                   <Label Text="{Binding SelectedInfoEmployee.Nom}"
                                          FontSize="16"
                                          TextColor="#FFFFFF"
                                          VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <!-- Email -->
                            <HorizontalStackLayout Spacing="10">
                                   <Label Text="Email:"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#9E9E9E"
                                          WidthRequest="130"/>
                                   <Label Text="{Binding SelectedInfoEmployee.Email}"
                                          FontSize="16"
                                          TextColor="#4FC3F7"
                                          VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <!-- Phone Number -->
                            <HorizontalStackLayout Spacing="10">
                                   <Label Text="Phone:"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#9E9E9E"
                                          WidthRequest="130"/>
                                   <Label Text="{Binding SelectedInfoEmployee.TelephonePortable}"
                                          FontSize="16"
                                          TextColor="#FFFFFF"
                                          VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <!-- Site -->
                            <HorizontalStackLayout Spacing="10">
                                   <Label Text="Site:"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#9E9E9E"
                                          WidthRequest="130"/>
                                   <Label Text="{Binding SelectedInfoEmployee.Site.Ville}"
                                          FontSize="16"
                                          TextColor="#81C784"
                                          VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>

                            <!-- Service -->
                            <HorizontalStackLayout Spacing="10">
                                   <Label Text="Service:"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="#9E9E9E"
                                          WidthRequest="130"/>
                                   <Label Text="{Binding SelectedInfoEmployee.Service.Nom}"
                                          FontSize="16"
                                          TextColor="#FFD54F"
                                          VerticalTextAlignment="Center"/>
                            </HorizontalStackLayout>
                     </VerticalStackLayout>

                     <!-- Separator -->
                     <BoxView HeightRequest="1"
                              BackgroundColor="#424242"
                              Margin="0,20"/>

                     <!-- Close Button -->
                     <HorizontalStackLayout HorizontalOptions="Center">
                            <Button Text="Close"
                                    Command="{Binding ClosePopupCommand}"
                                    BackgroundColor="#F44336"
                                    TextColor="#FFFFFF"
                                    WidthRequest="180"
                                    HeightRequest="50"
                                    CornerRadius="25"
                                    FontSize="16"
                                    FontAttributes="Bold"/>
                     </HorizontalStackLayout>
              </VerticalStackLayout>
       </ScrollView>
</toolkit:Popup>
